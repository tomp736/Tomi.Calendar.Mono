@page "/month"

<CalendarMonthComponent Date="ViewDate">
    <CalendarDay>
        <CalendarDayComponent Date="@context"></CalendarDayComponent>
    </CalendarDay>
</CalendarMonthComponent>

@code
{
    [Parameter]
    public string Date { get; set; }

    public DateTime ViewDate { get; set; }

    protected override void OnInitialized()
    {
        ViewDate = Date != null ? DateTime.Parse(Date) : DateTime.Today;
    }

    protected override void OnParametersSet()
    {
        ViewDate = Date != null ? DateTime.Parse(Date) : DateTime.Today;
    }
}