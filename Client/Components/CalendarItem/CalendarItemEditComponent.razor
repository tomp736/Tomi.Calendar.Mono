@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@using Tomi.Calendar.Mono.Client.Components.Shared
 
@page "/calendaritem/{id:guid}"

<EditForm Model="validationModel" OnSubmit="HandleSubmit">
    <DataAnnotationsValidator />
    <div class="d-flex flex-column align-items-center">
        <ValidationSummary />
    </div>
    <div>
        <div class="form-group">
            <label for="calendar-item-title">Title</label>
            <input class="form-control" type="text" id="calendar-item-title" @bind="validationModel.Title" />
        </div>
        <div class="form-group">
            <label for="calendar-item-description">Description</label>
            <input class="form-control" type="text" id="calendar-item-description" @bind="validationModel.Description" />
        </div>
        <div class="form-group">
            <label for="calendar-item-startdate">Start Date</label>
            <NoDaTimeDatePicker @bind-LocalDate="validationModel.StartDate" />            
        </div>
        <div class="form-group">
            <label for="calendar-item-enddate">End Date</label>
            <NoDaTimeDatePicker @bind-LocalDate="validationModel.EndDate"  />
        </div>
        <div class="form-group">
            <label for="calendar-item-startdate">Start Time</label>
            <NoDaTimeTimePicker @bind-LocalTime="validationModel.StartTime" />
        </div>
        <div class="form-group">
            <label for="calendar-item-enddate">End Time</label>
            <NoDaTimeTimePicker @bind-LocalTime="validationModel.EndTime" />
        </div>
        <button class="btn btn-primary" type="submit">Ok</button>
        <button class="btn btn-danger" @onclick="DeleteItem">Delete</button>
        <button class="btn btn-secondary" @onclick="ModalInstance.CancelAsync">Cancel</button>
    </div>
</EditForm>
